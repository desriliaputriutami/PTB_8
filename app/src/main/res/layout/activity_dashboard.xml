<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:src="@drawable/foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_white"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Husnil Kamil,M.T"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Ketua Program Studi"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_content"
            android:layout_width="167dp"
            android:layout_height="94dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_permintaanseminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Permintaan Seminar"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/jmlpermintaanseminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/poppinsregular"
                android:text="40"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_content1"
            android:layout_width="167dp"
            android:layout_height="94dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_permintaansidang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Permintaan Sidang"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/jmlpermintaansidang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/poppinsregular"
                android:text="28"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="358dp"
            android:layout_height="121dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="240dp"
            android:backgroundTint="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_jadwalseminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Jadwal Seminar Minggu Ini"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Selasa, 20 Sept" />

                <Button
                    android:id="@+id/button2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MARDANA DULAS_1611521001" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="358dp"
            android:layout_height="121dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="370dp"
            android:backgroundTint="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_jadwalsidang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Jadwal Sidang Minggu Ini"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tglsidang"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Rabu, 21 Sept" />

                <Button
                    android:id="@+id/btn_sidag"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Divo Pratama_1611523026" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>