<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermintaanTADetailActivity">

    <TextView
        android:id="@+id/textJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Form Pembimbing TA"
        android:textColor="@color/main"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRujukan"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="NAMA_MHS"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textNama"
        app:layout_constraintTop_toBottomOf="@+id/textNama"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Nama Mahasiswa :"
        android:textColor="@color/main"
        app:layout_constraintStart_toStartOf="@+id/textJudul"
        app:layout_constraintTop_toBottomOf="@+id/textJudul" />

    <TextView
        android:id="@+id/textNim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="NIM :"
        android:textColor="@color/main"
        app:layout_constraintStart_toStartOf="@+id/textRujukan"
        app:layout_constraintTop_toBottomOf="@+id/textRujukan" />

    <TextView
        android:id="@+id/textViewnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1611522001"
        app:layout_constraintStart_toStartOf="@+id/textNim"
        app:layout_constraintTop_toBottomOf="@+id/textNim" />

    <TextView
        android:id="@+id/textJudulTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Judul Tugas Akhir :"
        android:textColor="@color/main"
        app:layout_constraintStart_toStartOf="@+id/textNim"
        app:layout_constraintTop_toBottomOf="@+id/textViewnim" />

    <TextView
        android:id="@+id/textPembimbing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Pilih Pembimbing Tugas Akhir :"
        android:textColor="@color/main"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/buttonKirim"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/main"
        android:onClick="onButtonKirimClick"
        android:text="KIRIM"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputPembimbing" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="334dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="PENERAPAN LOGIKA FUZZY TSUKAMOTO BERBASIS WEB UNTUK PENGELOLAAN HUMAN RESOURCES"
        app:layout_constraintStart_toStartOf="@+id/textJudulTA"
        app:layout_constraintTop_toBottomOf="@+id/textJudulTA" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputPembimbing"
        android:layout_width="349dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:hint="input nama dosen"
        app:layout_constraintStart_toStartOf="@+id/textPembimbing"
        app:layout_constraintTop_toBottomOf="@+id/textPembimbing">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>